<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/siren3"
              android:layout_height="match_parent" android:clickable="false">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/enterName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="199dp"
            android:background="@color/grey"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:minHeight="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license"
            android:inputType="text"
            android:ems="10"
            android:background="@color/grey"
            android:id="@+id/editText2"
            android:layout_marginBottom="66dp" android:minHeight="30dp" android:layout_alignBottom="@+id/editText"
            android:layout_alignLeft="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@color/grey"
            android:text="@string/email"
            android:id="@+id/editText3"
            android:minHeight="30dp" android:layout_centerVertical="true" android:layout_alignLeft="@+id/editText"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/button3"
            android:layout_below="@+id/editText3" android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp" android:clickable="true"/>
</RelativeLayout>